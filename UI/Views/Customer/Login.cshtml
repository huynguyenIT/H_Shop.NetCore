                                        @Html.AntiForgeryToken()

                                        <div class="form-group">
                                            <label><i class="fa fa-user" aria-hidden="true"></i> Email </label>
                                            <input type="text" name="Email" class="form-control form-control-user" placeholder="Enter Email" required="" />
                                            @*@Html.TextBoxFor(model => model.Email, new { @placeholder = "Tên đăng nhập ...", @class = "txt" })*@
                                        </div>
                                        <div class="form-group">
