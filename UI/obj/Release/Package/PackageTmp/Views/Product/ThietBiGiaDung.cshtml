</head>

<body>
    <!-- Top bar Start -->
    <!-- Top bar End -->
    <!-- Nav Bar Start -->
    <!-- Nav Bar End -->
    <!-- Bottom Bar Start -->
    <!-- Bottom Bar End -->
    <!-- Breadcrumb Start -->
    <div class="breadcrumb-wrap">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="~/Product/Index">Danh sách sản phẩm</a></li>
                <li class="breadcrumb-item active">Thiết bị Gia dụng</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <!-- Product List Start -->
   <div class="product-view">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row">
                        @foreach (DTO_Product_Client item in @Model)
                        {

                            <div class="col-md-4">
                                @*<div class="product-title">
                                        @Html.DisplayNameFor(model => model.Item.Id_SanPham)
                                    </div>*@
                                <div class="product-item">
                                    <div class="product-title">
                                        @Html.DisplayFor(modelItem => item.Name)
                                        <div class="ratting">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                    </div>



                                    <div class="product-image">
                                        <a href="product-detail.html">
                                            <img src="@Url.Content(item.Photo)" />
                                        </a>
                                        <div class="product-action">
                                            <a href=" @Url.Action("Details", "Cart", new { id = item.Id_SanPham })"><i class="fa fa-cart-plus"></i></a>
                                            <a href="#"><i class="fa fa-heart"></i></a>
                                            <a href="#"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                    <div class="product-price">
                                        <h3>@Html.DisplayFor(modelItem => item.Price)<span> VNĐ </span></h3>

                                    </div>
                                    <div class="product-price">
                                        <a class="btn" href="@Url.Action("Details", "Cart", new { id = item.Id_SanPham })"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>


                                    </div>
                                </div>
                            </div>
                        }

                    </div>

                    <!-- Pagination Start -->
                    <div class="col-md-12">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <!-- Pagination Start -->
                </div>

                <!-- Side Bar Start -->
                <div class="col-lg-4 sidebar">






                    <div class="sidebar-widget tag">
                        <h2 class="title">Áo thun nam</h2>
                        <a href="#">Áo thun nữ</a>
                        <a href="#">Hoa quả</a>
                        <a href="#">Balo</a>
                        <a href="#">Túi xách nữ</a>
                        <a href="#">Ví da nam</a>
