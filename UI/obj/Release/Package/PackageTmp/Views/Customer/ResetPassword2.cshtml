@model UI.Models.ResetPasswordModel2
@{
    ViewBag.Title = "ResetPassword2";
    Layout = "~/Areas/Admin/Views/Shared/View_1.cshtml";
}



<link href="~/Content/cssMain.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("ResetPassword2", "Customer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row" style="min-height:500px;">
        <div class="col-lg-3 col-sm-2 col-md-1 col-xs-1"></div>
        <div class="col-lg-6 col-sm-8 col-md-10 col-xs-10">
            <h2 style="color:cornflowerblue;text-align:center">ĐẶT LẠI MẬT KHẨU</h2>

            @Html.HiddenFor(model => model.Mail)
            @Html.HiddenFor(model => model.ResetCode)
            @Html.HiddenFor(model => model.idUser)
            @Html.HiddenFor(model => model._id)
            @Html.PasswordFor(model => model.oldPassword, new { @placeholder = "Mật khẩu cũ ...", @class = "form-control" })
            <br />

            @Html.PasswordFor(model => model.NewPassword, new { @placeholder = "Mật khẩu mới ...", @class = "form-control" })
            <br />
            @Html.PasswordFor(model => model.ConfirmPassword, new { @placeholder = "Xác nhận mật khẩu mới", @class = "form-control" })
            <br />
            <input type="submit" value="Xác nhận" class="btn btn-google btn-user btn-block fab fa-google fa-fw" />
            <div class="warning">
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })<br />
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })<br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "list-style-type:none;" })
            </div>
            <font style="color:#7c1b1b">@ViewBag.Warning</font>
        </div>
        <div class="col-lg-3 col-sm-2 col-md-1 col-xs-1"></div>
    </div>}